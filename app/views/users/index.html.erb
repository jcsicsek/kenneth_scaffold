 <div id="main">
    <div class="page_margins">
      <div class="page">

          <h1>Listing users</h1>
          
          <table>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Password</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.password %></td>
              <td><%= link_to 'Show', user %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
          <% end %>
          </table>
          
          <br />
          
          <div class="btn btn_new"><%= link_to 'New User', new_user_path %><span></span></div>

        <br />
        <br />
        <br />
      </div>
    </div>
 </div>
