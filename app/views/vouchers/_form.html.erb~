<%= form_for(@voucher) do |f| %>
  <% if @voucher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@voucher.errors.count, "error") %> prohibited this voucher from being saved:</h2>

      <ul>
      <% @voucher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_type_id %><br />
    <%= f.collection_select(:event_type_id, EventType.all, :id, :label) %>
  </div><br />
  <div class="field">
    Event Title<br />
    <%= f.text_field :title %>
  </div><br />
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5 %>
  </div><br />
  <div class="field">
    Event Date and Time<br />
    <%= f.datetime_select :event_time %>
  </div><br />
  <div class="field">
    Hours to accept or deny offer<br />
    <%= f.text_field :offer_lifespan_minutes %>
  </div><br />
  <div class="field">
    Maximum vouchers to distribute<br />
    <%= f.text_field :max_offers %>
  </div><br />
  <div class="field">
    Voucher Price (full dollars)<br />
    <%= f.text_field :voucher_price_cents %>
  </div><br />
  <div class="field">
    Full Price of Event or Offer (full dollars)<br />
    <%= f.text_field :full_value_cents %>
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
